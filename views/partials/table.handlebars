<div class="table-responsive">
  <table class="table table-hover mb-0" id="{{id}}">
    <thead class="table-light text-muted" >
      <tr>
        {{#each head-cells}}
          <th scope="col" class="text-uppercase" style="border-bottom: 0 !important;" {{#if span}} colspan="{{span}}" {{/if}}>{{text}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      {{> table-row data}}
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4" class="text-center pt-3 pb-0" style="border-bottom: 0 !important;">
          <button class="btn btn-link text-center text-decoration-none text-primary">Show More</button>
        </th>
      </tr>
    </tfoot>
  </table>
</div>
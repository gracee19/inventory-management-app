<div class="col">
  <div class="card border-0 rounded-0 shadow-sm" >
    <div class="card-body pt-4 d-flex flex-column justify-content-between">
      <h5 class="text-muted lead mb-4">{{title}}</h5>
      
      <div class="row pt-2">
        <div class="stat-data">
          
          <p class="lead fw-bold text-dark mb-0">
            {{count}}
          </p>
          <p class="text-danger fw-bold mb-0"><i class="fas fa-caret-down"></i> <span>{{stat}}%</span></p>
        </div>
        <div class="graph"></div>
      </div>
    </div>
  </div>
</div>
